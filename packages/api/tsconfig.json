{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node", "vitest/globals"],
    "jsx": "react-jsx",
    "declaration": true,
    "lib": ["ESNext", "DOM"],
    "composite": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules", 
    "dist", 
    "src/**/*.test.ts", 
    "src/setupTests.ts",
    "src/mocks"
  ],
  "references": [
    { "path": "../types" },
    { "path": "../utils" }
  ]
} 